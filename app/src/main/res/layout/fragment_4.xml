<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

    <TextView
        android:id="@+id/text_1_frame_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/alata"
        android:textStyle="bold"
        android:text="@string/contact_info"
        android:textColor="@color/Deloitte"
        android:textSize="32sp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/work_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/work_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/contact_me_on_my_work_profiles"
                    android:textColor="@color/Deloitte"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Linkedin"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_below="@id/work_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/linkedin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/project_rl"
                android:layout_width="match_parent"
                android:layout_below="@id/work_rl"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/project_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/check_my_projects_at"
                    android:textColor="@color/Deloitte"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Github"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_below="@id/project_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/github" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/freelance_rl"
                android:layout_below="@id/project_rl"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/freelance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerHorizontal="true"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/check_my_freelance_profiles_at"
                    android:textColor="@color/Deloitte"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"            />

                <ImageView
                    android:id="@+id/Upwork"
                    android:layout_width="75dp"
                    android:layout_marginTop="25dp"
                    android:layout_height="75dp"
                    android:layout_toStartOf="@id/divider"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@id/freelance_text"
                    android:src="@drawable/upwork"/>

                <ImageView
                    android:id="@+id/Fiverr"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/freelance_text"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@id/divider"
                    android:src="@drawable/fiverr" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/social_media_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/freelance_rl"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/Instagram"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/Social_Media_text"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="30dp"
                    android:layout_toStartOf="@id/Gmail"
                    android:src="@drawable/instagram" />

                <ImageView
                    android:id="@+id/Gmail"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/Social_Media_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/gmail" />

                <ImageView
                    android:id="@+id/Whatsapp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/Social_Media_text"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@id/Gmail"
                    android:src="@drawable/whatsapp" />

                <TextView
                    android:id="@+id/Social_Media_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_centerHorizontal="true"
                    android:text="@string/connect_with_me_on"
                    android:textColor="@color/Deloitte"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    </LinearLayout>
</FrameLayout>